@model PhotoSchool.Models.Homework

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удалить</h2>

<h3>Уверены что хотите удалить?</h3>
<div>
    <h4>Домашняя работа</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Текст задания
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            Дата и время создания
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            @foreach (var photo in Model.Photos)
            {
                <div class="col">
                    <div class="photo_preview">

                        <a href="@photo.HomeworksPhotoPath" target="_blank">
                            <img src="@Url.Content(photo.HomeworksPhotoPath)" alt="Image">
                        </a>

                    </div>
                </div>
            }
        </div>
    </div>

    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("На главную", "Index")
        </div>
    }
</div>
